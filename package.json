{
  "name": "subscription-api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "sls": "sls",
    "test": "jest --watch",
    "coverage": "jest --coverage",
    "eslint:main": "eslint -c ./.eslintrc.yaml -f checkstyle -o reports/checkstyle.xml ./src /**/*.js",
    "eslint:test": "eslint -c ././test/.eslintrc.yaml -f checkstyle -o reports/checkstyle.tests.xml ./test/unit/**/*.js",
    "clean": "rm -rf node_modules/ reports/ .serverless/ .webpack/ .build/ ./coverage",
    "build": "npm run clean; npm ci;",
    "package": "sls package",
    "local:subscription-create": "sls invoke local --function subscription-post --path samples/subscription/newSubscription.json",
    "deploy": "sls deploy"
  },
  "author": "Antonio Reuter",
  "license": "ISC",
  "description": "Subscription API to provision IoT Rules & Actions",
  "dependencies": {
    "ajv": "^6.10.0",
    "aws-sdk": "^2.476.0",
    "moment": "^2.24.0",
    "source-map-support": "^0.5.12"
  },
  "devDependencies": {
    "@types/async": "^3.0.0",
    "@types/aws-lambda": "^8.10.27",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.8",
    "awesome-typescript-loader": "^5.2.1",
    "aws-sdk-mock": "^4.4.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "jest": "^24.8.0",
    "nock": "^10.0.6",
    "nodemon": "^1.19.1",
    "serverless": "^1.45.1",
    "serverless-offline": "^5.3.3",
    "serverless-webpack": "^5.3.1",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
